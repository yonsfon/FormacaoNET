@model IEnumerable<NobelMVC.Models.PremioNobel>
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<a href="@Url.Action("Create")" class="btn btn-default" title="add new">
    <i class="fa fa-plus"></i>
</a>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th class="col-lg-1">
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th class="col-lg-3">
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th class="col-lg-5">
                @Html.DisplayNameFor(model => model.Motivacao)
            </th>
            <th class="col-lg-1">
                @Html.DisplayNameFor(model => model.Categoria.Nome)
            </th>
            <th class="col-lg-2"></th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td class="text-right">
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.PremioNobelId })" class="btn btn-default" title="Edit"><i class="fa fa-pencil"></i></a>
                    <a href="@Url.Action("Details", new { id = item.PremioNobelId })" class="btn btn-default" title="Details"><i class="fa fa-search"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.PremioNobelId })" class="btn btn-default" title="Delete"><i class="fa fa-trash-o"></i></a>
                </div>
            </td>
        </tr>
    }
</table>
